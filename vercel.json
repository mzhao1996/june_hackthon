{
    "version": 2,
    "builds": [
        {
            "src": "Language_tool.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "Language_tool.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 